<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-xs-12">
  <%= form_for(@article, :html => {class:"form-horizontal",role: "form"})   do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2" >
          <%= f.label :title %>
      </div>
   
<div class="col-sm-8">
  <%= f.text_field :title,class:"form-control",placeholder:"title of article",autofocus:true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2" >
    <%= f.label :description %>
        </div>
      <div class="col-sm-8">
    <%= f.text_area :description,class:"form-control",rows: 13,placeholder:"description",autofocus:true %>
      </div>
    </div>
    
     <div class="form-group">
      <div class="row" >
        
      
      <div class="col-sm-offset-4 col-sm-8">
        
          
    
        <%= f.collection_check_boxes :category_ids,Category.all,:id,:name do |cb|%>
           <%  cb.label(class:"checkbox_inline input_checkbox")  {cb.check_box(class:"checkbox")+ cb.text} %>
        <% end %>
            
         </div>
    </div>
     </div>
    <div class="form-group">
      
      <div class="col-sm-offset-2 setcol-sm-8">
        
     
  <%= f.submit class:"btn btn-primary btn-lg"%>
         </div>
    </div>
  <% end %>
<p>
  </div>
</div>
<div class="col-sm-4 col-sm-offset-4" >
  

<%= link_to "[Cancel and Return to Article Page]",articles_path %>
  </div>
  </p>